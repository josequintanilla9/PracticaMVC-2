
<h1>Mantenimiento de Equipos</h1>
<br/>
<form asp-action="CrearEquipos">
	@*Inicio del formulario*@

	<div class="form-group row mb-4">
		<div class="col-sm-2">
			<label>Nombre</label>
		</div>
		<div class="col-sm-4">
			@Html.TextBox("nombre", "", new{@class="form-control"})
		</div>
		<div class="col-sm-2">
			@Html.Label("lblDescripcion", "Descripción")
		</div>
		<div class="col-sm-4">
			@Html.TextArea("Descripcion", "", new{@class="form-control", @placeHolder="Ingrese la descripción"})
		</div>
	</div>

	<div class="form-group row mb-4">
		<div class="col-sm-2">
			<label>Tipo de equipo</label>
		</div>
		<div class="col-sm-4">
			@Html.DropDownList("tipo_equipo_id", ViewData["listadoTipoDeEquipos"] as SelectList, "Seleccione un tipo", new {@class="form-control"})
		</div>
	</div>


	<div class="form-group row mb-4">
		<div class="col-sm-2">
			<label>Marca</label>
		</div>
		<div class="col-sm-4">
			@Html.DropDownList("marca_id", ViewData["listadoDeMarcas"] as SelectList, "Seleccione una marca", new {@class="form-control"})
		</div>
		<div class="col-sm-2">
			@Html.Label("lblModelo", "Modelo")
		</div>
		<div class="col-sm-4">
			@Html.TextBox("modelo", "", new { @class = "form-control" })
		</div>
	</div>


	<div class="form-group row mb-4">
		<div class="col-sm-2">
			<label>Año de compra</label>
		</div>
		<div class="col-sm-4">
			@Html.TextBox("anio_compra", "", new { @class = "form-control" })
		</div>
		<div class="col-sm-2">
			@Html.Label("lblCosto", "Costo")
		</div>
		<div class="col-sm-4">
			@Html.TextBox("costo", "", new { @class = "form-control" })
		</div>
	</div>
	

	<div class="form-group row mb-4">
		<div class="col-sm-2">
			<label>Vida utíl</label>
		</div>
		<div class="col-sm-4">
			@Html.TextBox("vida_util", "", new { @class = "form-control" })
		</div>
		<div class="col-sm-2">
			@Html.Label("lblEstado", "Estado de Equipo")
		</div>
		<div class="col-sm-4">
			@Html.DropDownList("estado_equipo_id", ViewData["listadoEstadoDeEquipos"] as SelectList, "Seleccione un Estado", new { @class = "form-control" })
		</div>
	</div>


	<div class="form-group row mb-4">
		<div class="col-sm-2"></div>
		<div class="col-sm-4">
			<input type="submit" class="btn btn-primary" value="Guardar"/>
		</div>
	</div>

	@*Tabla*@
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Equipo</th>
				<th>Descripción</th>
				<th>Marca</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var equipo in (IEnumerable<dynamic>)ViewData["listadoEquipo"])
			{
				<tr>
					<td>@equipo.nombre</td>
					<td>@equipo.descripcion</td>
					<td>@equipo.marca_nombre</td>
				</tr>
			}
		</tbody>
	</table>

	@*Fin del formulario*@
</form>

